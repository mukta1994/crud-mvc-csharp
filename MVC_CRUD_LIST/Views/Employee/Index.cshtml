@model IEnumerable<MVC_CRUD_LIST.Models.Employee>

@{
    ViewBag.Title = "Home";
}

<h2>CRUD Operation Using List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Partner)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PartnerID)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.EmployeeID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Partner)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PartnerID)
    </td>

    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.EmployeeID }) |
        @Html.ActionLink("Details", "Details", new { id = item.EmployeeID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.EmployeeID })
    </td>
</tr>
}

</table>
